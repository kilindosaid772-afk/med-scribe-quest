# Mobile Payment Provider Configuration
# Copy this file to .env and fill in your actual API credentials

# Base application URL (for webhook callbacks)
VITE_APP_URL=http://localhost:5173

# M-Pesa Configuration (Safaricom)
VITE_MPESA_API_URL=https://sandbox.safaricom.co.ke
VITE_MPESA_SHORTCODE=YOUR_SHORTCODE
VITE_MPESA_CONSUMER_KEY=YOUR_CONSUMER_KEY
VITE_MPESA_CONSUMER_SECRET=YOUR_CONSUMER_SECRET
VITE_MPESA_PASSKEY=YOUR_PASSKEY

# Airtel Money Configuration
VITE_AIRTEL_API_URL=https://api.airtel.africa
VITE_AIRTEL_API_KEY=YOUR_AIRTEL_API_KEY

# Tigo Pesa Configuration
VITE_TIGO_API_URL=https://api.tigo.co.tz
VITE_TIGO_API_KEY=YOUR_TIGO_API_KEY
VITE_TIGO_USERNAME=YOUR_TIGO_USERNAME
VITE_TIGO_PASSWORD=YOUR_TIGO_PASSWORD

# Halopesa Configuration
VITE_HALO_API_URL=https://api.halopesa.co.tz
VITE_HALO_API_KEY=YOUR_HALO_API_KEY
VITE_HALO_MERCHANT_ID=YOUR_MERCHANT_ID

# ZenoPay Configuration (Unified Mobile Money API for Tanzania)
# For development, this will be proxied through Vite dev server
# For production, use the actual ZenoPay API URL
VITE_ZENOPAY_API_URL=https://zenoapi.com/api
VITE_ZENOPAY_API_KEY=YOUR_ZENOPAY_API_KEY

# Supabase Configuration (if not already set)
VITE_SUPABASE_URL=YOUR_SUPABASE_URL
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
